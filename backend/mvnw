set -euo pipefail

export MAVEN_SKIP_RC=true

app_path=$(cd "${0%/*}" && pwd -P)
wrapper_dir="$app_path/.mvn/wrapper"
properties="$wrapper_dir/maven-wrapper.properties"

if [ ! -r "$properties" ]; then
  echo "Cannot find $properties" >&2
  exit 1
fi

distribution_url=$(sed -n 's/^distributionUrl=//p' "$properties")
wrapper_url=$(sed -n 's/^wrapperUrl=//p' "$properties")

if [ ! -f "$wrapper_dir/maven-wrapper.jar" ]; then
  echo "Downloading Maven Wrapper from: $wrapper_url"
  mkdir -p "$wrapper_dir"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL "$wrapper_url" -o "$wrapper_dir/maven-wrapper.jar"
  elif command -v wget >/dev/null 2>&1; then
    wget -q "$wrapper_url" -O "$wrapper_dir/maven-wrapper.jar"
  else
    echo "Please install curl or wget to download the Maven Wrapper." >&2
    exit 1
  fi
fi

wrapper_jar="$wrapper_dir/maven-wrapper.jar"
MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-"$app_path"}
export MAVEN_PROJECTBASEDIR

JAVA_EXE="${JAVA_HOME:-}/bin/java"
if [ ! -x "$JAVA_EXE" ]; then
  JAVA_EXE=$(command -v java || true)
fi

if [ ! -x "$JAVA_EXE" ]; then
  echo "Java is not installed or JAVA_HOME is not set." >&2
  exit 1
fi

exec "$JAVA_EXE" \
  -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" \
  -cp "$wrapper_jar" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
